<!doctype html>
<html lang="{{ site.language() }}">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>{{ htmlTitle | default('No title') }}</title>

	{{ css(['assets/css/index.css', '@auto']) }}

	<link rel="apple-touch-icon" sizes="180x180" href="/assets/img/favicons/apple-touch-icon.png" />
	<link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicons/favicon-32x32.png" />
	<link rel="icon" type="image/png" sizes="16x16" href="/assets/img/favicons/favicon-16x16.png" />
	<link rel="manifest" href="/site.webmanifest" />
	<link rel="mask-icon" href="/assets/img/favicons/safari-pinned-tab.svg" color="#ff6f4f" />
	<meta name="msapplication-TileColor" content="#ff6f4f" />
	<meta name="theme-color" content="#2b3b4c" />
</head>

<body>
	<div class="page{{ pageClass ?? null }}">
		
		<a href="#searchToggle" class="skip-to-content">
			<span class="button">Skip to search</span>
		</a>
		<a href="#mainContent" class="skip-to-content">
			<span class="button">Skip to content</span>
		</a>
		
		{% if page.parent == 'recipes' %}
			<a href="#ingredients" class="skip-to-content">
				<span class="button">Skip to ingredients</span>
			</a>
			<a href="#directions" class="skip-to-content">
				<span class="button">Skip to directions</span>
			</a>
		{% endif %}

		<header id="mainNav" class="nav page__header">
			<a class="nav__logo menu__item" href="{{ site.url }}" aria-label="Home"><span data-title="Home">{{ site.title }}</span></a>
			
			{# When activated, search appears over nav #}
			{% include '@snippets/searchForm.twig' %}

			{# Main site mobile and desktop navigation #}
			{% include '@snippets/navigation.twig' %}
		</header>
		
		<main id="mainContent" class="page__body{% if mainClass is defined and mainClass is not null %} {{ mainClass }}{% endif %}">
			{% block content %}
			{% endblock %}
		</main>
		
		<footer class="page__footer">
			<p>&copy; {{ 'now' | date('Y') }} <a href="{{ site.url }}/about">{{ site.title }}</a> | <em>A shared cookbook of recipes</em> | Project of <a href="https://onemohrti.me" rel="nofollow noreferrer">Derek</a> &amp; <a href="https://owielanctot.com" rel="nofollow noreferrer">Owie</a></p>
			<hr class="hr--gold" />
			<p><a href="#">Terms of Use</a> | <a href="#">Privacy Policy</a></p>
	<!--

			<?php if ($about = page('about')): ?>
			<nav class="social">

				<?php foreach ($about->social()->toStructure() as $social): ?>
				<a href="<?= $social->url() ?>"><?= $social->platform() ?></a>
				<?php endforeach ?>

			</nav>
			<?php endif ?>
	-->
		</footer>
		
	</div>
	
	{#
	{{ js('assets/js/main.js') }}
	Async
	{{ js('assets/js/main.js', true) }}
	Defer
	{{ js('assets/js/site.js', ['async' => true, 'defer' => true, 'data-something' => 'my-value']) }}
	#}
	{# Autoloading template specific script files #}
	{{ js(['assets/js/main.js', '@auto']) }}
</body>

</html>
