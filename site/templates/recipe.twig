{% extends '@templates/default.twig' %}
{% set mainClass = 'recipe' %}

{% block content %}
	<article class="recipe__grid">

		<header class="recipe__header intro">
			<h1 class="recipe__headline">{{ page.headline ?: page.title }}</h1>
			<div class="recipe__subheadline">{{ page.description.kirbytext | raw }}</div>
		</header>
		
		<figure class="recipe__cover">
			<img src="http://lorempixel.com/g/960/450/food" />
			<figcaption>
			</figcaption>
		</figure>

		<section class="recipe__ingredients">
			<h2 class="ingredient__title">Ingredients</h2>
			<ul class="ingredient__list">
				<li class="ingredient">ingredient</li>
				<li class="ingredient">ingredient</li>
				<li class="ingredient">ingredient</li>
			</ul>
		</section>
		
		<section class="recipe__directions">
			<h2 class="directions__title">Directions</h2>
			<ul class="directions__list">
				<li class="direction">ingredient</li>
				<li class="direction">ingredient</li>
				<li class="direction">ingredient</li>
			</ul>
		</section>
		
		{% if page.tags is defined and page.tags is not empty %}
			<section class="recipe__tags">
				<h3 class="tags__title">Related</h3>
				<p>{{ page.tags }}</p>
			</section>
		{% endif %}
		
	</article>
{% endblock %}
