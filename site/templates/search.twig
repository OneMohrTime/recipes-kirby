{% extends '@templates/default.twig' %}
{% set htmlTitle = page.title ~ ' - ' ~ site.title %}

{% block content %}
	<article class="results__grid">

		<header class="results__intro intro">
			<h1 class="results__headline headline">&ldquo;{{ query ?? 'Nothing?' }}&rdquo;</h1>
		</header>

		<section class="results">
			{% if results is defined and results is not empty %}
				<p>Here&rsquo;s everything.</p>
				<ul class="results__list">
					{% for result in results %}

						{% set resultType  = 'â€“ ' ~ result.parent %}
						{% set link        = result.url %}
						{% set name        = result.title %}
						{% set description = result.description %}

						<li class="results__result">
							<a href="{{ link }}" class="result">
								<figure class="result__image">
									<img src="http://lorempixel.com/250/250/food" alt="Photo of {{ name }}" class="thumbnail" />
									<figcaption class="thumbnail__bg">{{ resultType | slice(0, 1) }}</figcaption>
								</figure>
								<span class="result__type">{{ resultType }}</span>
								<h2 class="result__title">{{ name }}</h2>
								<div class="result__description">
									<p>{{ description }}</p>
								</div>
							</a>
						</li>

					{% endfor %}
				</ul>
			{% else %}
				<p>We got nothin&rsquo;.</p>
			{% endif %}
		</section>

	</article>
{% endblock %}
