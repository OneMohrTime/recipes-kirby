{% extends '@templates/default.twig' %}

{% block content %}
	<article class="note">
		<header class="note-header intro">
			<h1>{{ page.title }}</h1>
			<time class="note-date">{{ page.date | date('d F Y') }}</time>
			{% if page.tags is defined and page.tags is not empty %}
				<p class="note-tags tags">{{ page.tags }}</p>
			{% endif %}
		</header>

		<div class="note-text text">
			{{ page.text.kirbytext | raw }}
		</div>
	</article>
{% endblock %}
