{% extends '@templates/default.twig' %}

{% block content %}
	<header class="intro">
		<h1>{{ page.title }}</h1>
	</header>

	<ul class="albums">
		{% for recipe in recipes %}
		<li{% if page.children().listed is even %} data-even{% endif %}>
			<a href="<?= $recipe->url() ?>">
				<figure>
					<?php if ($cover = $recipe->cover()): ?>
					<?= $cover->crop(800, 1000) ?>
					<?php endif ?>
					<figcaption><?= $recipe->title() ?></figcaption>
				</figure>
			</a>
		</li>
		{% endfor %}
	</ul>
{% endblock %}
