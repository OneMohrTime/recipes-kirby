{% extends '@templates/default.twig' %}

{% set recipes = site
	.find('recipes')
	.children()
	.sortBy('date', 'desc') %}

{% block content %}
	<header class="intro">
		<h1>{{ page.headline ?: page.title }}</h1>
	</header>

	{% if recipes is defined and recipes is not empty %}
	<ul class="recipes">
		{% for recipe in recipes %}
		<li>
			<a href="{{ recipe.url }}">
				<figure>
					<img src="http://lorempixel.com/g/500/400/food/{{ loop.index }}" />
					<figcaption>{{ recipe.title }}</figcaption>
				</figure>
			</a>
		</li>
		{% endfor %}
	</ul>
	{% else %}
		<p>No recipes :(</p>
	{% endif %}
	
	{% if page.description is defined and page.description is not empty %}
		<p>{{ page.description }}</p>
	{% endif %}
{% endblock %}
