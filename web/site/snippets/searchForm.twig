<section id="searchForm" class="nav__search">
	<form action="{{ site.url }}/search" class="nav__search-form">
		<input type="search" id="search" class="search__field" name="q" value="{{ query ?? null }}" placeholder="Type ingredients, recipes, drinks..." />
		<button type="button" id="searchClose" class="search__close button">&times;</button>
		<input type="submit" class="search__submit button" value="Search" />
	</form>
</section>
